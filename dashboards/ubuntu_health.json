{
  "id": null,
  "uid": "ubuntu-health",
  "title": "Ubuntu Health",
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["system", "ubuntu", "node_exporter"],
  "panels": [
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "datasource": {"uid": "Prometheus", "type": "prometheus"},
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "orientation": "auto",
        "displayMode": "lcd",
        "minValue": 0,
        "maxValue": 100,
        "thresholds": {
          "mode": "percentage",
          "steps": [
            {"color": "green"},
            {"color": "orange", "value": 70},
            {"color": "red", "value": 90}
          ]
        }
      }
    },

    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "datasource": {"uid": "Prometheus", "type": "prometheus"},
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "orientation": "auto",
        "displayMode": "lcd",
        "minValue": 0,
        "maxValue": 100,
        "thresholds": {
          "steps": [
            {"color": "green"},
            {"color": "orange", "value": 70},
            {"color": "red", "value": 90}
          ]
        }
      }
    },

    {
      "type": "gauge",
      "title": "Disk Usage (%)",
      "datasource": {"uid": "Prometheus", "type": "prometheus"},
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} - node_filesystem_free_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "orientation": "auto",
        "displayMode": "lcd",
        "minValue": 0,
        "maxValue": 100,
        "thresholds": {
          "steps": [
            {"color": "green"},
            {"value": 75, "color": "orange"},
            {"value": 90, "color": "red"}
          ]
        }
      }
    },

    {
      "type": "gauge",
      "title": "Load Average (1m)",
      "datasource": {"uid": "Prometheus", "type": "prometheus"},
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "displayMode": "lcd",
        "orientation": "auto",
        "minValue": 0,
        "maxValue": 8,
        "thresholds": {
          "steps": [
            {"color": "green"},
            {"value": 2, "color": "orange"},
            {"value": 4, "color": "red"}
          ]
        }
      }
    },

    {
      "type": "timeseries",
      "title": "Network Traffic (Bytes/sec)",
      "datasource": {"uid": "Prometheus", "type": "prometheus"},
      "gridPos": {"x": 0, "y": 6, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*\"}[2m])",
          "legendFormat": "{{device}} RX",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*\"}[2m])",
          "legendFormat": "{{device}} TX",
          "refId": "B"
        }
      ],
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"showLegend": true, "placement": "bottom"}
      }
    }
  ]
}

